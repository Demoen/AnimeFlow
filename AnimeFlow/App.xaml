<Application x:Class="AnimeFlow.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources RequestedTheme="Dark" />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Styles -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#FF00A8E8"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
            <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FF2A2A2A"/>
            <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFAAAAAA"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
