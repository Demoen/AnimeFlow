<Window x:Class="AnimeFlow.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="About AnimeFlow" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E"
        ResizeMode="NoResize"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸŽ¬" 
                   FontSize="72" 
                   HorizontalAlignment="Center"
                   Foreground="#FF00A8E8"
                   Margin="0,0,0,20"/>

        <!-- App Name and Version -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="AnimeFlow" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionText"
                       Text="Version 1.0.0" 
                       FontSize="14" 
                       Foreground="#FFAAAAAA"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="2" 
                   Text="Real-time Anime Interpolation" 
                   FontSize="16" 
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Credits -->
        <Border Grid.Row="3" 
                BorderBrush="#FF3A3A3A" 
                BorderThickness="0,1,0,1"
                Padding="0,20">
            <StackPanel>
                <TextBlock Text="Built with:" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBlock Text="â€¢ mpv - High-performance media player" Foreground="#FFAAAAAA" Margin="0,0,0,5"/>
                <TextBlock Text="â€¢ VapourSynth - Video processing framework" Foreground="#FFAAAAAA" Margin="0,0,0,5"/>
                <TextBlock Text="â€¢ RIFE NCNN Vulkan - AI frame interpolation" Foreground="#FFAAAAAA" Margin="0,0,0,5"/>
                <TextBlock Text="â€¢ yt-dlp - Universal video downloader" Foreground="#FFAAAAAA" Margin="0,0,0,15"/>
                
                <TextBlock Text="Copyright Â© 2025 AnimeFlow Team" FontSize="11" Foreground="#FF888888" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Check for Updates" Width="130" Height="32" Margin="0,0,10,0" Click="CheckUpdates_Click"/>
            <Button Content="View License" Width="130" Height="32" Margin="0,0,10,0" Click="ViewLicense_Click"/>
            <Button Content="Close" Width="80" Height="32" Click="Close_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
