<Window x:Class="AnimeFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="AnimeFlow" 
        Height="720" 
        Width="1280"
        MinHeight="480"
        MinWidth="640"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        DragLeave="Window_DragLeave"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3A3A3A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF4A4A4A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="SliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="#FF00A8E8"/>
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/> <!-- Top bar -->
            <RowDefinition Height="*"/>  <!-- Video area -->
            <RowDefinition Height="Auto"/> <!-- Controls -->
            <RowDefinition Height="30"/> <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Grid Grid.Row="0" Background="#FF2A2A2A">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button Content="Open File" Style="{StaticResource ControlButtonStyle}" Click="OpenFile_Click"/>
                <Button Content="Open URL" Style="{StaticResource ControlButtonStyle}" Click="OpenURL_Click"/>
                <Separator Width="1" Background="#FF3A3A3A" Margin="8,4"/>
                <Button Content="Settings" Style="{StaticResource ControlButtonStyle}" Click="Settings_Click"/>
                <Button Content="About" Style="{StaticResource ControlButtonStyle}" Click="About_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                <!-- Interpolation Status -->
                <TextBlock x:Name="InterpolationStatusText" 
                           Text="Interpolation: OFF" 
                           Foreground="#FFAAAAAA" 
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"
                           FontSize="12"
                           FontWeight="SemiBold"/>
                
                <!-- Quality Preset -->
                <TextBlock Text="Quality:" 
                           Foreground="#FFAAAAAA" 
                           VerticalAlignment="Center"
                           Margin="0,0,6,0"
                           FontSize="11"/>
                <ComboBox x:Name="QualityPresetCombo"
                          Width="100"
                          SelectedIndex="1"
                          SelectionChanged="QualityPreset_Changed"
                          VerticalAlignment="Center"
                          ToolTip="Select interpolation quality preset">
                    <ComboBoxItem Content="Fast"/>
                    <ComboBoxItem Content="Balanced"/>
                    <ComboBoxItem Content="Beauty"/>
                    <ComboBoxItem Content="Custom"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Video Display Area -->
        <Grid Grid.Row="1" Background="Black">
            <!-- mpv video rendering surface using WindowsFormsHost for proper HWND isolation -->
            <Border x:Name="VideoContainer" 
                    Background="Black"
                    ClipToBounds="True"
                    Visibility="Collapsed">
                <WindowsFormsHost x:Name="VideoHostHost" Background="Black" ClipToBounds="True">
                    <!-- Panel will be added in code-behind -->
                </WindowsFormsHost>
            </Border>

            <!-- Overlay for drag-drop hint -->
            <Grid x:Name="DropOverlay" 
                  Visibility="Collapsed">
                <Grid.Background>
                    <SolidColorBrush Color="#DD000000"/>
                </Grid.Background>
                
                <!-- Animated border -->
                <Border BorderBrush="#FF00A8E8" 
                        BorderThickness="4"
                        CornerRadius="16"
                        Margin="40"
                        Background="#22000000">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF00A8E8" 
                                        BlurRadius="40" 
                                        ShadowDepth="0" 
                                        Opacity="0.8"/>
                    </Border.Effect>
                    
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Large drop icon with glow -->
                        <Border Width="160" Height="160" 
                                CornerRadius="80"
                                Background="#FF1A1A1A"
                                BorderBrush="#FF00A8E8"
                                BorderThickness="3"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,32">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF00A8E8" 
                                                BlurRadius="40" 
                                                ShadowDepth="0" 
                                                Opacity="0.9"/>
                            </Border.Effect>
                            <Grid>
                                <TextBlock Text="ðŸ“" 
                                           FontSize="80" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="White"/>
                            </Grid>
                        </Border>
                        
                        <TextBlock Text="Drop your video here" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   Margin="0,0,0,12">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" 
                                                BlurRadius="8" 
                                                ShadowDepth="2" 
                                                Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <TextBlock Text="Release to open with AnimeFlow" 
                                   FontSize="18" 
                                   HorizontalAlignment="Center"
                                   Foreground="#FFCCCCCC"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Placeholder when no video loaded -->
            <Grid x:Name="PlaceholderOverlay" 
                  Visibility="Visible">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF1A1A2A" Offset="0"/>
                        <GradientStop Color="#FF252535" Offset="0.5"/>
                        <GradientStop Color="#FF1A1A2A" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Icon Container with glow effect -->
                    <Border Width="140" Height="140" 
                            CornerRadius="70"
                            Background="#FF2A2A3A"
                            BorderBrush="#FF00A8E8"
                            BorderThickness="3"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,32">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF00A8E8" 
                                            BlurRadius="30" 
                                            ShadowDepth="0" 
                                            Opacity="0.7"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="ðŸŽ¬" 
                                       FontSize="64" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#FF00A8E8"/>
                        </Grid>
                    </Border>
                    
                    <!-- Title -->
                    <TextBlock Text="AnimeFlow" 
                               FontSize="42" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               Margin="0,0,0,8">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FF00A8E8" 
                                            BlurRadius="20" 
                                            ShadowDepth="0" 
                                            Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <!-- Subtitle -->
                    <TextBlock Text="Real-time Anime Interpolation" 
                               FontSize="18" 
                               HorizontalAlignment="Center"
                               Foreground="#FFAAAACC"
                               Margin="0,0,0,40"/>
                    
                    <!-- Dashed border container for drag-drop area -->
                    <Border BorderBrush="#FF444455" 
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="60,40"
                            Margin="0,0,0,0"
                            Background="#FF25252F">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="#FF444455"/>
                                <Setter Property="Background" Value="#FF25252F"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#FF00A8E8"/>
                                        <Setter Property="Background" Value="#FF2A2A38"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <!-- Upload icon -->
                            <TextBlock Text="ðŸ“" 
                                       FontSize="52" 
                                       HorizontalAlignment="Center"
                                       Foreground="#FF00A8E8"
                                       Margin="0,0,0,20"/>
                            
                            <!-- Instructions -->
                            <TextBlock Text="Drag and drop your video here" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       Margin="0,0,0,12"/>
                            
                            <TextBlock Text="or" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center"
                                       Foreground="#FF888899"
                                       Margin="0,0,0,12"/>
                            
                            <!-- Browse button style text -->
                            <TextBlock Text="Click 'Open File' to browse" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center"
                                       Foreground="#FF00A8E8"
                                       Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Supported formats -->
                    <TextBlock Text="Supports: MP4, MKV, AVI, MOV, WebM and more" 
                               FontSize="12" 
                               HorizontalAlignment="Center"
                               Foreground="#FF666677"
                               Margin="0,28,0,0"/>
                </StackPanel>
            </Grid>

            <!-- OSD Messages -->
            <Border x:Name="OsdMessage"
                    Background="#CC000000"
                    CornerRadius="4"
                    Padding="16,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    Visibility="Collapsed">
                <TextBlock x:Name="OsdMessageText"
                           Foreground="White"
                           FontSize="16"
                           Text="Message"/>
            </Border>
        </Grid>

        <!-- Playback Controls -->
        <Grid Grid.Row="2" Background="#FF2A2A2A" Height="80">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Seek Bar -->
            <Grid Grid.Row="0" Margin="12,8,12,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="CurrentTimeText" 
                           Grid.Column="0"
                           Text="00:00" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           FontFamily="Consolas"
                           Margin="0,0,8,0"/>

                <Slider x:Name="SeekSlider" 
                        Grid.Column="1"
                        Style="{StaticResource SliderStyle}"
                        Minimum="0" 
                        Maximum="100"
                        Value="0"
                        VerticalAlignment="Center"
                        ValueChanged="SeekSlider_ValueChanged"
                        PreviewMouseDown="SeekSlider_PreviewMouseDown"
                        PreviewMouseUp="SeekSlider_PreviewMouseUp"/>

                <TextBlock x:Name="DurationText" 
                           Grid.Column="2"
                           Text="00:00" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           FontFamily="Consolas"
                           Margin="8,0,0,0"/>
            </Grid>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                
                <!-- Play/Pause -->
                <Button x:Name="PlayPauseButton" 
                        Style="{StaticResource IconButtonStyle}"
                        Content="â–¶" 
                        FontSize="20"
                        Click="PlayPause_Click"
                        ToolTip="Play/Pause (Space)"/>

                <!-- Stop -->
                <Button Style="{StaticResource IconButtonStyle}"
                        Content="â¹" 
                        FontSize="16"
                        Click="Stop_Click"
                        ToolTip="Stop"/>

                <!-- Seek Backward -->
                <Button Style="{StaticResource IconButtonStyle}"
                        Content="âª" 
                        FontSize="16"
                        Click="SeekBackward_Click"
                        ToolTip="Seek -10s (Left)"/>

                <!-- Seek Forward -->
                <Button Style="{StaticResource IconButtonStyle}"
                        Content="â©" 
                        FontSize="16"
                        Click="SeekForward_Click"
                        ToolTip="Seek +10s (Right)"/>

                <Separator Width="1" Background="#FF3A3A3A" Margin="8,4"/>

                <!-- Toggle Interpolation -->
                <Button x:Name="ToggleInterpolationButton"
                        Style="{StaticResource ControlButtonStyle}"
                        Content="Enable Interpolation" 
                        Click="ToggleInterpolation_Click"
                        ToolTip="Toggle Interpolation (I)"/>

                <Separator Width="1" Background="#FF3A3A3A" Margin="8,4"/>

                <!-- Volume -->
                <TextBlock Text="ðŸ”Š" 
                           FontSize="16" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="8,0,4,0"/>
                
                <Slider x:Name="VolumeSlider" 
                        Width="100"
                        Minimum="0" 
                        Maximum="100"
                        Value="100"
                        VerticalAlignment="Center"
                        ValueChanged="VolumeSlider_ValueChanged"
                        ToolTip="Volume"/>

                <TextBlock x:Name="VolumeText" 
                           Text="100%" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           Width="40"
                           Margin="4,0,0,0"/>

                <Separator Width="1" Background="#FF3A3A3A" Margin="8,4"/>

                <!-- Fullscreen -->
                <Button Style="{StaticResource IconButtonStyle}"
                        Content="â›¶" 
                        FontSize="18"
                        Click="Fullscreen_Click"
                        ToolTip="Fullscreen (F)"/>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="3" Background="#FF252525">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusText" 
                       Grid.Column="0"
                       Text="Ready" 
                       Foreground="#FFAAAAAA" 
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"
                       FontSize="11"/>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">
                
                <TextBlock x:Name="FpsText" 
                           Text="FPS: --" 
                           Foreground="#FF00D9FF"
                           Margin="0,0,16,0"
                           FontSize="11"
                           FontFamily="Consolas"
                           FontWeight="Bold"/>

                <TextBlock x:Name="GpuText" 
                           Text="Interpolation: OFF" 
                           Foreground="#FFAAAAAA"
                           FontSize="11"
                           FontFamily="Consolas"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
